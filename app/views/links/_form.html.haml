= form_for @link do |f|
  - if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :url
    = f.text_field :url
  .field
    = f.label :category
    = f.text_field :category
  .field
    = f.label :does_expire
    = f.check_box :does_expire
  .field
    = f.label :experies_on
    = f.date_select :experies_on
  .actions
    = f.submit 'Save'
