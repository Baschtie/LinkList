.ui.top.attached.menu
  = link_to "Back", :back, :class => "item"
  %a.item{:href => links_path}
    %i.list.icon
    List
  %a.item{:href => edit_link_path(@link)}
    %i.pencil.icon
    Edit
  .active.item
    %i.eye.icon
    Show
.ui.attached.segment
  = image_tag(generate_qrcode(@link.url).to_data_url, :class => "ui right floated image")
  %p
    %b Name:
    = @link.name
  %p
    %b Description:
    = @link.description
  %p
    %b Url:
    = @link.url
  %p
    %b Tags:
    = display_tag_name(@link.tags)
  %p
    %b Does expire:
    = @link.does_expire
  - if @link.does_expire
    %p
      %b Experies on:
      = @link.experies_on
